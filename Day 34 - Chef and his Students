#include <stdio.h>
#include <string.h>
int main(void)
{
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    int cnt=0;
	    char s[100000];
	    scanf("%s",s);
	    for(int j=0;j<strlen(s);j++)
	    {
	        if(s[j]=='<' && s[j+1]=='>')
	        {
	            cnt++;
	        }
	    }
	    printf("%d\n",cnt);
	}
	return 0;
}
